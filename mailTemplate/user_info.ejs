<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <title>Document</title>
    <style>
      #page-user-info {
        width: 100%;
        display: flex;
        flex-direction: column;
      }
      #page-user-info .logo-date {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
      }
      #page-user-info .logo-date .date {
        color: gray;
        font-size:.9rem;
        opacity: .7;
      }
      #page-user-info .info-gen {
        width: 100%;
        display: flex;
        flex-direction: column;
        padding-top: 50px;
      }
      .titre {
        font-size: 1rem;
        font-weight: 700;
      }
      #page-user-info .info-gen .info-gen-user {
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        gap: 15%;
      }
      #page-user-info .adresse {
        width: 100%;
        display: flex;
        flex-direction: column;
        padding-top: 30px;
      }
      .produit {
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
      }
      .tab-text{
        font-size: .8rem;
      }
      .page-pied{
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        margin-top: 8rem;
      }
    </style>
  </head>
  <body>
    <div id="page-user-info" style="width: 100%; padding: 20px 20px 40px 20px">
      <div class="logo-date" style="display: flex; flex-direction: row">
        <div class="logo">
          <img
            src="http://aes.wcg-rdc.tech/images/logo.png"
            class="logo-img img-fluid"
            alt=""
            srcset=""
          />
        </div>
        <div class="date">
          <span><%= new Date().toLocaleDateString('fr-fr') %></span> <br />
          <span><%= client.cli_prenom %> <%= client.cli_nom %></span>
        </div>
      </div>

      <div class="info-gen">
        <h2 class="titre">Informations générales</h2>
        <div class="info-gen-user">
          <table class="table tab-text " style="width: 60%; border: 1px solid #dcdcdc">
            <tr>
              <td style="background-color: #dcdcdc">Sexe</td>
                 <td><%= client.Titre.tit_libelle === "M" ? "M" : "F"  %></td>
            </tr>
            <tr>
              <td style="background-color: #dcdcdc">Nom</td>
              <td><%= client.cli_prenom %> <%= client.cli_nom %></td>
            </tr>
            <!-- <tr>
              <td style="background-color: #dcdcdc">Date de naissance</td>
              <td>0000-00-00</td>
            </tr> -->
            <!-- <tr>
              <td style="background-color: #dcdcdc">Age</td>
              <td>0</td>
            </tr> -->
            <tr>
              <td style="background-color: #dcdcdc">Email</td>
              <td><%= client.cli_mail %></td>
            </tr>
            <tr>
              <td style="background-color: #dcdcdc">Langue</td>
              <td>Français</td>
            </tr>
          </table>

          <table class="table tab-text" style="width: 60%; border: 1px solid #dcdcdc">
            <!-- <tr>
              <td style="background-color: #dcdcdc">
                Date de création de compte
              </td>
              <td>2023-03-31 19:19:52</td>
            </tr> -->
            <tr>
              <td style="background-color: #dcdcdc">Dernière visite</td>
              <td><%= new Date().toLocaleDateString('fr-fr') %>  <%= new Date().getHours()%>:<%=new Date().getMinutes()%>:<%= new Date().getSeconds() %></td>
            </tr>
            <!-- <tr>
              <td style="background-color: #dcdcdc">Siret</td>
              <td></td>
            </tr> -->
            <tr>
              <td style="background-color: #dcdcdc">Entreprise</td>
              <td></td>
            </tr>
            <tr>
              <td style="background-color: #dcdcdc">Site web</td>
              <td></td>
            </tr>
            <!-- <tr>
              <td style="background-color: #dcdcdc">Ape</td>
              <td></td>
            </tr> -->
          </table>
        </div>
      </div>

      <div class="adresse">
        <h2 class="titre">Adresses</h2>
        <table class="table table-striped tab-text" style="border: 1px solid #dcdcdc">
              <tr style="background-color: #dcdcdc">
            <th>Alias</th>
            <th>Entreprise</th>
            <th>Nom</th>
            <th>Adresse</th>
            <th>Téléphone(s)</th>
            <th>Pays</th>
            <!-- <th>Date</th> -->
          </tr>
          <% client.Adresses.forEach(element => { %>
             <tr>
            <td><%= element.adr_nom %></td>
            <td><%= element.adr_societe %></td>
            <td><%= element.prenom %>  <%= element.adr_nom %></td>
            <td><%= element.adr_adresse %></td>
            <td><%= element.adr_phone %></td>
            <td><%= element.adr_pays %></td>
            <!-- <td>Date</td> -->
          </tr>
          <% }) %>
        </table>
      </div>

      <div class="adresse commande">
        <h2 class="titre">Commandes</h2>
        <table class="table table-striped tab-text" style="border: 1px solid #dcdcdc">
             <tr style="background-color: #dcdcdc">
              <th>Référence</th>
              <!-- <th>Paiement</th>
              <th>Statut de commande</th> -->
              <th>Montant total payé ( € )</th>
              <th>Date</th>
            </tr>
          <% if (client.Commandes.length !== 0) { %>
            <% client.Commandes.forEach(element => { %>

          <tr>
            <td><%= element.com_num %></td>
            <!-- <td></td>
            <td></td> -->
            <td> <%= (element.com_ttc + element.com_frais + element.com_port).toFixed(2).toString().replace(".",",")%></td>
            <td><%= (element.com_date).toLocaleDateString('fr-fr')%>  <%= (element.com_date).getHours()%>:<%=(element.com_date).getMinutes()%>:<%= (element.com_date).getSeconds() %></td>
        </tr>
            <% }) %>

            
            <% } else { %>
               <tr>
            <td>Aucune Commande</td>
          </tr>
          <% } %>
      

         
        </table>
      </div>
      <div class="adresse paniers">
        <h2 class="titre">Paniers</h2>
        <table class="table table-striped tab-text" style="border: 1px solid #dcdcdc">
          <tr style="background-color: #dcdcdc">
            <th>ID</th>
            <th class="w-75 text-center">Nombre total de produits</th>
            <th>Date</th>
          </tr>
          <tr>
            <td>#45</td>
            <td class="w-75 text-center">7</td>
            <td>2023-05-29 11:23:09</td>
          </tr>
        </table>
        <div class="produit" style="display: flex; width: 100%">
          <h5 style="font-size: 0.6rem">
            Produit(s) dans le panier <span>45</span> :
          </h5>
          <table class="table table-striped tab-text" style="width: 80%; border: 1px solid #dcdcdc">
            <tr style="background-color: #dcdcdc">
              <th><i>Référence</i></th>
              <th class="w-75 text-center"><i>Nom</i></th>
              <th><i>Quantité</i></th>
            </tr>
            <tr>
              <td><i>R-6</i></td>
              <td class="w-75 text-center"><i>jsk</i></td>
              <td><i>6</i></td>
            </tr>
          </table>
        </div>
      </div>

      <div class="page-pied">
        <span style="font-size: .8rem;opacity: .8;">AIGUILLES EN SCENE - 5 Rue des Agaces - 35650 Le Rheu - France</span>
      </div>
    </div>
  </body>
</html>
