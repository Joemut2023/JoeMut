<div id="page-article">
  <div class="title-article">
    <span><a href="/">Acceuil</a><%= %></span>
    <span>/ <%= article.pro_libelle %></span>
  </div>

  <div class="content row">
    <div class="left-content col-md-6">
      <div class="image-content">
        <div
          class="image default_img"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          <img
            src="/images/produits/<%= article.Media[0].med_ressource %>"
            alt=""
          />
          <div class="search-icon">
            <span><i class="fa-solid fa-magnifying-glass"></i></span>
          </div>
        </div>

        <div id="carouselImages" class="carousel slide">
          <div class="carousel-inner">
            <% article.Media.forEach(element => { %>
            <div class="carousel-item active">
              <img
                src="/images/produits/<%= element.med_ressource %>"
                class="img-fluid small_carousel"
              />
            </div>
            <% }) %>
          </div>
          <% if (article.Media.length > 1) { %>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselImages"
            data-bs-slide="prev"
          >
            <span class="icon"><i class="fa-solid fa-chevron-left"></i></span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselImages"
            data-bs-slide="next"
          >
            <span class="icon"><i class="fa-solid fa-chevron-right"></i></span>
          </button>
          <% } %>
        </div>
      </div>

      <div
        class="modal fade modal-container"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-lg">
          <div class="modal-content rounded-0">
            <div class="modal-body">
              <div class="images">
                <div class="image-grand">
                  <img
                    src="/images/produits/<%= article.Media[0].med_ressource %>"
                    class="img-grand img-fluid"
                    alt=""
                  />
                </div>
                <div class="desc">
                  <p class="utile">Quantité initiale : 5</p>
                  <p class="utile">Tailles disponibles :</p>
                  <p>1 en 8 ans</p>
                  <p>4 en 10 ans</p>
                </div>
              </div>

              <div class="small-images">
                <% article.Media.forEach(element => { %>
                <div class="image-card">
                  <img
                    src="/images/produits/<%= element.med_ressource %>"
                    class="img-fluid img-small"
                    alt=""
                  />
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="right-content col-md-6">
      <h1><%= article.pro_libelle %></h1>
      <p class="ref">Référence: <%= article.pro_ref %></p>
      <div class="price">
        <p class="number"><%= priceArticle.Tarifs[0].tar_ttc %> €</p>
        <p class="title">TTC</p>
      </div>
      <div class="informations">
        <div class="description">
          <p class="utile">Quantité initiale : 5</p>
          <p class="utile">Tailles disponibles :</p>
          <p>1 en 8 ans</p>
          <p>4 en 10 ans</p>
        </div>
        <span>* J’indiquerai les tailles après l’essayage</span>
      </div>
      <div class="actions">
        <div class="add-cart">
          <p>Quantité</p>
          <div class="quantity">
            <div class="qty-btn">
              <input type="text" class="number-value" value="1" />
              <div class="btns">
                <button class="btn-up">
                  <span><i class="fa-solid fa-chevron-up"></i></span>
                </button>
                <button class="btn-down">
                  <span><i class="fa-solid fa-chevron-down"></i></span>
                </button>
              </div>
            </div>
            <button class="add btn-add" data-id="<%= article.pro_id %>">
              Ajouter au panier
            </button>
          </div>
          <div class="alerte-qty"></div>
        </div>

        <div class="socials">
          <span>Partager</span>
          <ul>
            <li>
              <a href="" title="facebook"
                ><span><i class="fa-brands fa-facebook-f"></i></span
              ></a>
            </li>
            <li>
              <a href="" title="twitter"
                ><span><i class="fa-brands fa-twitter"></i></span
              ></a>
            </li>
            <li>
              <a href="" title="pinterest"
                ><span><i class="fa-brands fa-pinterest-p"></i></span
              ></a>
            </li>
          </ul>
        </div>

        <div class="tabs-container">
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <button
                class="nav-link btn-tab-one active button-add"
                id="home-tab"
                data-bs-toggle="tab"
                data-bs-target="#home-tab-pane"
                type="button"
                role="tab"
                aria-controls="home-tab-pane"
                aria-selected="true"
              >
                Description
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button
                class="nav-link btn-tab-two"
                id="profile-tab"
                data-bs-toggle="tab"
                data-bs-target="#profile-tab-pane"
                type="button"
                role="tab"
                aria-controls="profile-tab-pane"
                aria-selected="false"
              >
                Détails du produit
              </button>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <div
              class="tab-pane fade show active content-one"
              id="home-tab-pane"
              role="tabpanel"
              aria-labelledby="home-tab"
              tabindex="0"
            >
              <%= article.pro_details %>
            </div>
            <div
              class="tab-pane fade content-two"
              id="profile-tab-pane"
              role="tabpanel"
              aria-labelledby="profile-tab"
              tabindex="0"
            >
              <%= article.pro_description %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if (produits_similaires.length > 0) { %>
  <div class="others-like">
    <h5>VOUS AIMEREZ AUSSI</h5>
    <div class="items row">
      <% produits_similaires.forEach(element => { %>
      <div class="item col-md-4">
        <div class="image">
          <a href="/article/<%= element.pro_id %>"
            ><img
              src="/images/produits/<%= element.Media[0].med_ressource %>"
              class="img-fluid"
              alt=""
          /></a>
        </div>
        <div class="details">
          <p class="desc">
            <a href="/article/<%= element.pro_id %>"
              ><span><%= element.pro_libelle %></span></a
            >
          </p>
          <p class="ref">Ref: <%= element.pro_ref %></p>
          <div>
            <p class="price"><%= element.Tarifs[0].tar_ttc %>€</p>
            <p class="bar">|</p>
            <p class="price btn">Ajouter</p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  <% } %>

  <div class="row comment">
    <div class="title">
      <span class="icon"><i class="fa-solid fa-message"></i></span>
      <span>Commentaires (<%= article.pro_comment %>)</span>
    </div>
    <div class="avis">
      <div class="content">
        <span class="icon"><i class="fa-solid fa-pen"></i></span>
        <span
          class="text"
          data-bs-toggle="modal"
          data-bs-target="#commentModalLabel"
          >soyez le premier à donner votre avis</span
        >
      </div>
    </div>

    <div
      class="modal fade modal-container"
      id="commentModalLabel"
      tabindex="-1"
      aria-labelledby="commentModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg">
        <div class="modal-content rounded-0">
          <div class="modal-header">
            <h4 class="modal-title">Donnez votre avis</h4>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>
          <div class="modal-body">
            <div class="row first_block">
              <div class="col-md-2 col-sm-2 block-1">
                <div class="img-cover">
                  <img
                    src="/images/produits/<%= article.Media[0].med_ressource %>"
                    alt=""
                    class="img-fluid"
                  />
                </div>
              </div>
              <div class="col-md-4 col-sm-4 block-2">
                <h3>MRC16B - Robe tunique liberty Bleu/Lilas</h3>
                <div>
                  <p>
                    <strong><span>Quantité initiale : 1</span></strong>
                  </p>
                  <p>
                    <strong><span>Taille disponibles : </span></strong>
                  </p>
                  <p><span>15 en S/M (36/38)</span></p>
                  <p>
                    <em class="small-text"
                      >* J’indiquerai les tailles après l’essayage</em
                    >
                  </p>
                </div>
              </div>
              <div class="col-md-6 col-sm-6 block-3">
                <div class="item">
                  <label>Quality:</label>
                  <div class="contents-starts">
                    <div class="star-content star-empty clearfix"></div>
                    <div class="start-content start-full clearfix">
                      <div class="star star-on">star</div>
                      <div class="star star-on">star</div>
                      <div class="star star-on">star</div>
                      <div class="star">star</div>
                      <div class="star">star</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <form action="/article/<%= article.pro_id %>" method="post">
              <div class="row title_label">
                <div class="col-md-12 col-sm-12">
                  <label for="comment_title" class="form-label"
                    >Titre <sup class="required">*</sup></label
                  >
                </div>
              </div>
              <div class="row title_input">
                <div class="col-md-12 col-sm-12 input">
                  <input type="text" name="cmt_titre" id="" />
                </div>
              </div>
              <div class="row content_label">
                <div class="col-md-12 col-sm-12">
                  <label for="comment_content" class="form-label"
                    >Avis <sup class="required">*</sup></label
                  >
                </div>
              </div>
              <div class="row content_text">
                <div class="col-md-12 col-sm-12 content">
                  <textarea
                    name="cmt_comment"
                    id=""
                    cols="30"
                    rows="10"
                  ></textarea>
                </div>
              </div>
              <div class="row buttons">
                <div class="col-md-6 col-sm-6">
                  <p class="required">
                    <sup>*</sup>
                    champs requis
                  </p>
                </div>
                <div class="col-md-6 col-sm-6 btns">
                  <button type="button" class="btn-annuler">Annuler</button>
                  <button type="submit" class="btn-envoyer">Envoyer</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/javascripts/article.js"></script>
