<header id="bloc-header">
    <div>
        <div class="top-bar ">
            <div class="title-content">
                <p>Phone +243819600518</p>
                <p>RENTAL AND CREATION OF AFRO PRODUCTS</p>
            </div>
            <% if (!locals.user) { %>
                <div class="link-content">
                    <a href="/inscription/#page-inscription"><strong>register</strong></a>&nbsp
                    <p>-</p>
                    &nbsp
                    <a href="/connexion/#page-connexion"> <strong>connection</strong></a>
                </div>
            <% } %>
            
            <div class="social-link d-flex flex-row">
                <a href="https://www.facebook.com/" target="_blank"><i class="fa-2x fa-brands fa-facebook "></i
                ></a>
                <a href="https://www.instagram.com/" target="_blank"><i class="fa-2x fa-brands fa-instagram"></i>
                </a>
            </div>
        </div>
        <div class="nav-main-content sentinal">
            <a class="navbar-brand" href="/"><img src="/images/logo.png" class="logo-img img-fluid" alt="" srcset="" /></a>
            <div class="nav-content">
                <nav class="navbar navbar-expand-lg ">
                    
                    <button class="btn btn-canva" data-bs-toggle="offcanvas" data-bs-target="#menu-mobil-canva" role="button" aria-controls="menu-mobil-canva">
                        <span class="navbar-toggler-icon"></span> 
                    </button>
                </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="/#qui-sommes-nous">About </a>
                            </li>
                            <li class="nav-item dropdown">
                                <div class="dropdown">
                                    <a class="nav-link dropdown-toggle" href="/catalogue/#pages-catalogue" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Catalog
                                        </a>
                                    <div class="dropdown-menu dropdown-parent" aria-labelledby="dropdownMenuButton">
                                        <div class="menu-title">
                                            <% type_categories?.forEach(type_categorie => { %>
                                                <div class="title-catalogue">
                                                    <h6><%= type_categorie.tyc_libelle %></h6>
                                                    <hr>
                                                    <ul>
                                                        <% type_categorie.Categories.forEach(categorie => { %>
                                                            <li><a href="/catalogue/<%=categorie.cat_id %>"><%=categorie.cat_libelle %></a></li>
                                                        <% }) %>    
                                                    </ul>
                                                </div>
                                            <% }) %>
                                        </div>

                                    </div>
                                </div>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link" href="/nouvelleCollection/#nouvelleCollection">New collection</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href='/promotion/#page-promotion'>Promotions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/contact/#page-contact">Contact</a>
                            </li>
                        </ul>
                    </div>
                </nav>
                <h4 class="menu-button m-3">Menu</h4>
                <form class="d-flex flex-row search-div" action="/recherche/#page-recherche" method="get">
                    <button type="submit" style="border: none; outline:none;background-color:white;">
                        <i class="fa-solid fa-magnifying-glass mt-1"></i>
                    </button>
                    <div class="form-inline my-2 my-lg-0">
                        <input type="text" name="search" placeholder="Search" class="search-input" />
                    </div>
                </form>
                <div class="d-flex flex-row user-div">
                    <div class="dropstart">
                        <% if (locals.user) { %>
                        <i class="fa-solid fa-user fa-xl dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"></i>
                        <ul class="dropdown-menu user-menu-Dropdown">
                            <li><a class="dropdown-item" href="/my-account/#page-mon-compte"><i class="fa-regular fa-user"></i> Account</a></li>
                            <li><a class="dropdown-item" href="/my-account/adresses/#adresses"><i class="fa-regular fa-address-book"></i> Adress</a></li>
                            <li><a class="dropdown-item" href="/my-account/historique/#page-historique"><i class="fa-solid fa-bars"></i> History of your orders</a></li>  
                            <li><a class="dropdown-item" href="/my-account/logout"><i class="fa-solid fa-right-to-bracket"></i> Disconnect</a></li>
                        </ul>
                       <% } else {%>  
                        <a href="/connexion"><i class="fa-solid fa-user fa-xl"></i></a>
                       <% } %>
                      </div>
                      <a  id="kart-link-handler-btn" class="position-relative" data-bs-toggle="offcanvas" href="#bloc-panier" role="button" aria-controls="bloc-panier">
                        <i class="fa-solid fa-xl fa-cart-shopping">
                        </i>
                        <span class="position-absolute top-75 start-80 translate-middle badge rounded-circle " id="cart-item-count">
                          <%= locals.pan_nbr ? locals.pan_nbr:0   %> 
                        <span class="visually-hidden">unread messages</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>
