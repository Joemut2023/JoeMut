<div id="admin-blocs-produitHeader" class="border-bottom">
  <h6>Produits en promo</h6>
  <div class="produit-menu">
    <h4>Gérer les produits en promo</h4>
    <div class="produit-menu-btn">
      <button type="button" class="btn btn-info">
        <a href="/admin/apply/add">
          <i class="fa-solid fa-circle-plus"></i> Appliquer une promo à un
          produit</a
        >
      </button>
      <button type="button" class="btn btn-outline-secondary">Aide</button>
    </div>
  </div>
</div>
<div class="d-flex mt-4 p-2 menu-bar rounded">
  <div class="d-flex justify-content-center pt-3 gap-2 w-25">
    <i class="fa-solid fa-user fa-2xl"></i>
    <div>
      <p>
        Clients <br />
        <span>TOUT TEMPS</span>
      </p>
    </div>
  </div>
  <div class="d-flex justify-content-center pt-3 gap-2 w-25">
    <i class="fa-solid fa-dollar-sign fa-2xl"></i>
    <div>
      <p>
        Réduction <br />
        <span>TOUT TEMPS</span>
      </p>
    </div>
  </div>
  <div class="d-flex justify-content-center pt-3 gap-2 w-25">
    <i class="fa-solid fa-bag-shopping fa-2xl"></i>
    <div>
      <p>
        Commandes & reduction<br />
        <span>TOUT TEMPS</span>
      </p>
    </div>
  </div>
  <div class="d-flex justify-content-center pt-3 gap-2 w-25">
    <i class="fa-solid fa-money-check-dollar fa-2xl"></i>
    <div>
      <p>
        Essayez le code promo <br />
        <span>TOUT TEMPS</span>
      </p>
    </div>
  </div>
</div>
<% if (typeof errorMsg !== 'undefined') { %>
<div class="alert alert-danger mt-3 d-flex justify-content-between" role="alert"><%= errorMsg %> <button type="button" class="btn-close btn-close-flash" data-bs-dismiss="alert" aria-label="Close"></button></div>
<% } %> <% if (typeof succesMsg == 'string') { %>
<div class="alert alert-success mt-3 d-flex justify-content-between" role="alert"><%= succesMsg %> <button type="button" class="btn-close btn-close-flash" data-bs-dismiss="alert" aria-label="Close"></button></div>
<% } %>
<div id="admin-page-add-apply" class="mt-3 rounded mb-5">
  <div class="header-add-client d-flex gap-2 p-2 pb-0">
    <p>Produits en promo</p>
  </div>
  <hr />
  <form method="POST" action="/admin/apply/add">
    <div class="d-flex flex-column gap-4">
      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="InputCode">promo</label>
        </div>
        <div class="w-50">
          <select
            required
            class="form-select"
            aria-label="Default select example"
            name="prm_id"
          >
            <option selected>Choisir la promo</option>
            <% for( let index = 0; index < promos.length; index++ ) { %>
            <option value="<%= promos[index].prm_id %>">
              <%= promos[index].prm_code %>
            </option>
            <% } %>
          </select>
        </div>
      </div>

      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="pourcentageCode">Produit</label>
        </div>
        <div class="autocomplete w-50">
          <input
            id="myInput"
            type="text"
            name="pro_libelle"
            placeholder="Tapez le nom d'un produit"
            class="form-control add-panier-detail-input-name"
            required
          />
        </div>
        <input
          type="hidden"
          name="pro_id"
          class="hidden-input-pro-id-add-panier_detail"
        />
      </div>
    </div>
    <hr />
    <div class="d-flex justify-content-between p-2">
      <a href="/admin/apply">
        <button type="button" class="btn btn-outline-secondary">Annuler</button>
      </a>
      <button type="submit" class="btn btn-info">Enregistrer</button>
    </div>
  </form>
</div>
<script src="/javascripts/admin/addApply.js"></script>
