<div id="admin-blocs-produitHeader" class="border-bottom">
  <h6 class="pt-3">Promo</h6>
  <div class="produit-menu">
    <h4>Créer une nouvelle promo</h4>
    <div class="produit-menu-btn">
      <button type="button" class="btn btn-info">
        <i class="fa-solid fa-circle-plus"></i> Ajouter un nouveau code promo
      </button>
      <button type="button" class="btn btn-outline-secondary">Aide</button>
    </div>
  </div>
</div>

<% if (typeof errorMsg !== 'undefined') { %>
<div class="alert alert-danger mt-3 d-flex justify-content-between" role="alert"><%= errorMsg %>  <button type="button" class="btn-close btn-close-flash" data-bs-dismiss="alert" aria-label="Close"></button></div>
<% } %> <% if (typeof succesMsg == 'string') { %>
<div class="alert alert-success mt-3 d-flex justify-content-between" role="alert"><%= succesMsg %>  <button type="button" class="btn-close btn-close-flash" data-bs-dismiss="alert" aria-label="Close"></button></div>
<% } %>

<div id="admin-page-add-clients" class="mt-3 rounded mb-5">
  <div class="header-add-client d-flex gap-2 p-2 pb-0">
    <i class="fa-solid fa-dollar-sign xl p-1"></i>
    <p>Promo</p>
  </div>
  <hr />
  <form method="POST" action="/admin/promo/add">
    <div class="d-flex flex-column gap-4">
      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="InputCode">Code promo</label>
        </div>
        <div class="w-50">
          <input
            type="text"
            class="form-control"
            id="InputCode"
            aria-describedby="codeHelp"
            name="prm_code"
            required
          />
        </div>
      </div>
      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="pourcentageCode">Pourcentage</label>
        </div>
        <div class="w-50">
          <input
            type="number"
            class="form-control"
            id="pourcentageCode"
            aria-describedby="pourcentageNomHelp"
            name="prm_pourcent"
            min="1"
          />
        </div>
      </div>
      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="valeurCode">Valeur</label>
        </div>
        <div class="w-50">
          <input
            type="number"
            class="form-control"
            id="valeurCode"
            aria-describedby="valeurHelp"
            name="prm_valeur"
            min="1"
          />
        </div>
      </div>
      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="inputDebut">Date début</label>
        </div>
        <div class="w-50">
          <input
            type="date"
            class="form-control"
            id="inputDebut"
            name="prm_debut"
            required
            value="<%= new Date().toISOString().substring(0,10) %>"
          />
        </div>
      </div>
      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="inputFIn">Date fin</label>
        </div>
        <div class="w-50">
          <input
            type="date"
            class="form-control"
            id="inputFIn"
            name="prm_fin"
            required
            value="<%= new Date().toISOString().substring(0,10) %>"
          />
        </div>
      </div>

      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="InputNom">Activé</label>
        </div>
        <div class="w-50">
          <div class="form-check form-switch">
            <input
              class="form-check-input"
              id="activateClient"
              name="prm_actif"
              value="true"
              type="checkbox"
              checked
            />
          </div>
        </div>
      </div>
      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="InputNom">Pour une commande</label>
        </div>
        <div class="w-50">
          <div class="form-check form-switch">
            <input
              class="form-check-input"
              id="activateClient"
              name="prm_commande"
              value="true"
              type="checkbox"
              checked
            />
          </div>
        </div>
      </div>
    </div>
    <hr />
    <div class="d-flex justify-content-between p-2">
      <a href="/admin/promo">
        <button type="button" class="btn btn-outline-secondary">Annuler</button>
      </a>
      <button type="submit" class="btn btn-info">Enregistrer</button>
    </div>
  </form>
</div>
