<div id="admin-blocs-produitHeader" class="border-bottom">
  <h6 class="pt-3">Promo</h6>
  <div class="produit-menu">
    <h4>Modifier une promo</h4>
    <div class="produit-menu-btn">
      <button type="button" class="btn btn-info">
        <i class="fa-solid fa-circle-plus"></i> Ajouter une nouvelle promo
      </button>
      <button type="button" class="btn btn-outline-secondary">Aide</button>
    </div>
  </div>
</div>

<% if (typeof succesMsg == 'string') { %>
<div class="alert alert-success mt-3" role="alert"><%= succesMsg %></div>
<% } %> <% if (typeof nothingMsg == 'string') { %>
<div class="alert alert-dark mt-3" role="alert"><%= nothingMsg %></div>
<% } %>

<div id="admin-page-add-clients" class="mt-3 rounded mb-5">
  <div class="header-add-client d-flex gap-2 p-2 pb-0">
    <i class="fa-solid fa-user mt-1"></i>
    <p>Client</p>
  </div>
  <hr />
  <form method="POST" action="/admin/promo/update">
    <div class="d-flex flex-column gap-4">
        <input type="hidden" name="prm_id" value="<%= promos.prm_id %>" />
      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="InputCode">Code promo</label>
        </div>
        <div class="w-50">
          <input
            type="text"
            class="form-control"
            id="InputCode"
            aria-describedby="codeHelp"
            name="prm_code"
            value="<%= promos.prm_code %>"
            required
          />
        </div>
      </div>
      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="pourcentageCode">Pourcentage</label>
        </div>
        <div class="w-50">
          <input
            type="number"
            class="form-control"
            id="pourcentageCode"
            aria-describedby="pourcentageNomHelp"
            name="prm_pourcent"
            min="1"
            value="<%= promos.prm_pourcent %>"
            required
          />
        </div>
      </div>
      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="valeurCode">Valeur</label>
        </div>
        <div class="w-50">
          <input
            type="number"
            class="form-control"
            id="valeurCode"
            aria-describedby="valeurHelp"
            name="prm_valeur"
            min="1"
            value="<%= promos.prm_valeur%>"
            required
          />
        </div>
      </div>
      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="inputDebut">Date début</label>
        </div>
        <div class="w-50">
          <input
            type="date"
            class="form-control"
            id="inputDebut"
            name="prm_debut"
            required
            value="<%= promos.prm_debut %>"
          />
        </div>
      </div>
      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="inputFIn">Date fin</label>
        </div>
        <div class="w-50">
          <input
            type="date"
            class="form-control"
            id="inputFIn"
            name="prm_fin"
            required
            value="<%= promos.prm_fin %>"
          />
        </div>
      </div>

      <div class="form-group d-flex gap-4">
        <div class="d-flex justify-content-end label-div">
          <label for="InputNom">Activé</label>
        </div>
        <div class="w-50">
          <div class="form-check form-switch">
            <input class="form-check-input" id="activateClient" name="prm_actif"
            value="true" type="checkbox" <%= promos.prm_actif ? "checked" :"" %>
            />
          </div>
        </div>
      </div>
    </div>
    <hr />
    <div class="d-flex justify-content-between p-2">
      <button type="button" class="btn btn-outline-secondary">
        <a href="/admin/promo">Annuler</a>
      </button>
      <button type="submit" class="btn btn-info">Enregistrer</button>
    </div>
  </form>
</div>
