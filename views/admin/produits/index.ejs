<%- include('../blocs/produitHeader') %>
<div id="admin-page-produits">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">ID</th>
        <th scope="col">Image</th>
        <th scope="col">Nom</th>
        <th scope="col">Référence</th>
        <th scope="col">Categorie</th>
        <th scope="col">Montant HT</th>
        <th scope="col">Montant TTC</th>
        <th scope="col">Quantité</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if ((typeof produits !== 'undefined') && produits.length > 0) { %> <%
      produits.forEach(element => { %>
      <tr>
        <td scope="row">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="flexCheckDefault"
          />
        </td>
        <th scope="row"><%= element.pro_id %></th>

        <td width="60">
          <img
            src="/images/produits/<%= element.Media[0].med_ressource %>"
            alt=""
            class="img-fluid w-100 h-25 img-content"
          />
        </td>
        <td><%= element.pro_libelle %></td>
        <td><%= element.pro_ref %></td>
        <td><%= element.Categorie.cat_libelle %></td>
        <td>
          <%= element.Tarifs[0].tar_ht.toFixed(2).toString().replace(".", ",")%>
          €
        </td>
        <td>
          <%= element.Tarifs[0].tar_ttc.toFixed(2).toString().replace(".",
          ",")%> €
        </td>
        <td>
          <%= quantiteOfEachProduct.find(item => item.id === element.pro_id).qty
          ? quantiteOfEachProduct.find(item => item.id === element.pro_id).qty :
          "non renseignée" %>
        </td>
        <td>
          <div class="d-flex justify-content-between">
            <a href="/admin/produits/<%= element.pro_id %>">
              <i class="fa-solid fa-pen"></i
            ></a>
            <div class="dropdown">
              <i
                class="fa-solid dropdown-toggle fa-ellipsis-vertical"
                type="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              ></i>

              <ul class="dropdown-menu">
                <li>
                  <a
                    class="dropdown-item"
                    href="/admin/produits/<%= element.pro_id %>"
                    ><i class="fa-solid fa-eye"></i> Prévisualiser</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="#"
                    ><i class="fa-solid fa-trash"></i> Supprimer</a
                  >
                </li>
              </ul>
            </div>
          </div>
        </td>
      </tr>
      <% }) %> <% }else { %>
      <div class="alert alert-primary" role="alert">
        Il n'y a aucun coproduitmande dans votre base des données pour
        l'instant.
      </div>
      <% } %>
    </tbody>
  </table>
  <div class="cat-pagination">
    <% if (nbrPages > 1) { %>
    <div class="row affichage">
      <p>
        Affichage <span><%= start %> - <%= end %></span> de
        <span><%= produitsNbr%></span>
      </p>
    </div>
    <nav>
      <ul class="pagination">
        <li class="page-item">
          <a class="page-link" href="/admin/produits/?&page=1">1</a>
        </li>
        <% if (pageActive === 1 || pageActive ===2) { %>
        <li class="page-item">
          <a class="page-link" href="/admin/produits/?&page=2">2</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="/admin/produits/?&page=3">3</a>
        </li>
        <% } else if (pageActive !== nbrPages && pageActive !== nbrPages-1) { %>
        <li class="page-item">
          <a
            class="page-link"
            href="/admin/produits/?&page=<%= pageActive -1 %>"
            ><%= pageActive-1 %></a
          >
        </li>
        <li class="page-item">
          <a class="page-link" href="/admin/produits/?&page=<%= pageActive %>"
            ><%= pageActive %></a
          >
        </li>
        <li class="page-item">
          <a class="page-link" href="/admin/produits/?&page=<%= pageActive+1 %>"
            ><%= pageActive+1 %></a
          >
        </li>
        <li class="page-item">
          <a class="page-link" href="/admin/produits/?&page=<%= pageActive+2 %>"
            ><%= pageActive+2 %></a
          >
        </li>
        <li class="page-item">...</li>
        <% } %>
        <li class="page-item">
          <a class="page-link" href="/admin/produits/?&page=<%= nbrPages %>"
            ><%= nbrPages %></a
          >
        </li>
      </ul>
    </nav>

    <% } %>
  </div>
</div>
