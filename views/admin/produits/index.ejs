<%- include('../blocs/produitHeader') %>

<div id="admin-page-produits">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col" class="text-center">ID</th>
        <th scope="col" class="text-center">Image</th>
        <th scope="col" class="text-center">Référence</th>
        <th scope="col" class="text-center w-25">Nom</th>
        <th scope="col" class="text-center">Catégorie</th>
        <th scope="col" class="text-center w-25">Prix HT</th>
        <th scope="col" class="text-center w-25">Prix TTC</th>
        <th scope="col" class="text-center">Quantité</th>
        <th scope="col" class="text-center">Actions</th>
         <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <tr class="research-line">
          <form action="/admin/produits/search" method="post">
        <td></td>
        <td></td>
        <td></td>
        <td><input class="research" name="ref" value="<%= (typeof ref !== "undefined") ? ref:'' %>"   type="text" placeholder="chercher" ></td>
        <td><input class="research" name="libelle" value="<%= (typeof libelle !== "undefined") ? libelle:'' %>"    type="text" placeholder="chercher" ></td>
        <td><input class="research"  name="cat" value="<%= (typeof cat !== "undefined") ? cat:'' %>"  type="text" placeholder="chercher" ></td>
        <td class="plage">
          <input class="research" name="tarHtUp" value="<%= (typeof tarHtUp !== "undefined") ? tarHtUp:'' %>"  type="number">
          <input class="research" name="tarHtDown" value="<%= (typeof tarHtDown !== "undefined") ? tarHtDown:'' %>" type="number">
        </td>
        <td> </td>
          <td class="plage">
          <input  class="research" name="qtyUp" value="<%= (typeof qtyUp !== "undefined") ? qtyUp:'' %>" type="text">
          <input class="research" name="qtydDown" value="<%= (typeof qtydDown !== "undefined") ? qtydDown:'' %>" type="text">
        </td>
        <td> <button type="submit" class="btn btn-info">
          <i class="fa fa-search" aria-hidden="true"></i> <span>Rechercher</span>
        </button></td>
        <td></td>
        </form>
      </tr>
      <% if ((typeof produits !== 'undefined') && produits.length > 0) { %> <%
      produits.forEach(element => { %>
      <tr>
        <td></td>
        <th scope="row"><%= element.pro_id %></th>

        <td width="60">
          <img
            src="/images/produits/<%= element.Media[0]?.med_ressource %>"
            alt=""
            class="img-fluid w-100 h-25 img-content"
          />
        </td>
          <td class="text-center w-25"><%= element.pro_ref %></td>
        <td class="text-center w-25"><%= element.pro_libelle %></td>
        <td class="text-center"><%= element.Categorie.cat_libelle %></td>
        <td class="text-center w-25">
          <%= element.Tarifs[0]?.tar_ht.toFixed(2).toString().replace(".", ",")%>
          €
        </td>
        <td class="text-center w-25">
          <%= element.Tarifs[0]?.tar_ttc.toFixed(2).toString().replace(".",
          ",")%> €
        </td>
        <td class="text-center">
          <%= quantiteOfEachProduct.find(item => item.id === element.pro_id)?.qty
          ? quantiteOfEachProduct.find(item => item.id === element.pro_id)?.qty :
          "non renseignée" %>
        </td>
        <td class="text-center">
          <div class="d-flex justify-content-center gap-4">
            <a href="/admin/produits/<%= element.pro_id %>">
              <i class="fa-solid fa-pen"></i
            ></a>
              <div class="form-check form-switch">
              <input class="form-check-input inputActivation pro-statut" data-id="<%=
              element.pro_id %>" type="checkbox" name="<%=
              element.pro_id %>" value="" <%=
              element.pro_statut ? "checked" :"" %> />
                </div>
            
            
          </div>
        </td>
        <td></td>
      </tr>
      <% }) %> <% }else { %>
      <div class="alert alert-primary" role="alert">
        Il n'y a aucun coproduitmande dans votre base des données pour
        l'instant.
      </div>
      <% } %>
    </tbody>
  </table>
  <div class="cat-pagination">
    <% if (nbrPages > 1) { %>
    <div class="row affichage">
      <p>
        Affichage <span><%= start %> - <%= end %></span> de
        <span><%= produitsNbr%></span>
      </p>
    </div>
    <nav>
      <ul class="pagination">
        <li class="page-item">
          <a class="page-link" href="/admin/produits/?&page=1">1</a>
        </li>
        <% if (pageActive === 1 || pageActive ===2) { %>
        <li class="page-item">
          <a class="page-link" href="/admin/produits/?&page=2">2</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="/admin/produits/?&page=3">3</a>
        </li>
        <% } else if (pageActive !== nbrPages && pageActive !== nbrPages-1) { %>
        <li class="page-item">
          <a
            class="page-link"
            href="/admin/produits/?&page=<%= pageActive -1 %>"
            ><%= pageActive-1 %></a
          >
        </li>
        <li class="page-item">
          <a class="page-link" href="/admin/produits/?&page=<%= pageActive %>"
            ><%= pageActive %></a
          >
        </li>
        <li class="page-item">
          <a class="page-link" href="/admin/produits/?&page=<%= pageActive+1 %>"
            ><%= pageActive+1 %></a
          >
        </li>
        <li class="page-item">
          <a class="page-link" href="/admin/produits/?&page=<%= pageActive+2 %>"
            ><%= pageActive+2 %></a
          >
        </li>
        <li class="page-item">...</li>
        <% } %>
        <li class="page-item">
          <a class="page-link" href="/admin/produits/?&page=<%= nbrPages %>"
            ><%= nbrPages %></a
          >
        </li>
      </ul>
    </nav>

    <% } %>
  </div>
</div>

<script src="/javascripts/admin/produit.js"></script>
