<%- include('../blocs/panierHeader') %>
<div id="admin-page-panier">
    <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col" class="text-center">ID</th>
        <th scope="col" class="text-center">ID commande</th>
        <th scope="col" class="text-center">Client</th>
        <th scope="col" class="text-center">Total</th>
        <th scope="col" class="text-center">Transporteur</th>
        <th scope="col" class="text-center">Date</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% panier.forEach(element => { %>
            <tr>
            <td scope="row">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="flexCheckDefault"
          />
            </td>
            <td scope="row" class="text-center"><%= element.pan_id %></td>
            <td scope="row" class="text-center w-25">
                <% if(element.Commande){ %>
              <%= element.Commande.com_id %>
               <% } else{ %>
                <span style="border:1px solid rgb(241, 60, 60);border-radius:5px;color:white;background-color: rgb(241, 60, 60);padding:3px 4px;">Non commandé</span>
                <% } %>
            </td>
            <td scope="row" class="text-center w-25" ><% if ((typeof element.Client.cli_nom !== "undefined")) { %>
             <%= (element.Client.cli_prenom.charAt(0).toUpperCase())%>. <%= element.Client.cli_nom %>
            <% } %></td>
            <td scope="row" class="text-center">
               <% if(element.Commande){ %>
              <%= element.Commande.com_ttc %> €
               <% } else{ %>
                <span style="border:1px solid rgb(17, 204, 73);border-radius: 5px;color:white;background-color: rgb(17, 204, 73);padding:3px 4px;"><%=element.Panier_details[0]?.pad_ttc  %> €</span>
                <% } %>
              </td>
            <td scope="row" class="text-center w-25" >
            <% if(element.Commande){ %>
              <%= element.Commande.Frais_port.frp_libelle %>
               <% } else{ %>
                -
                <% } %>
          </td>
            <td scope="row" class="text-center w-25"><%= element.pan_date.getDate()%>/<%= element.pan_date.getMonth()%>/<%= element.pan_date.getFullYear()%>   <%= element.pan_date.getHours()%>:<%=element.pan_date.getMinutes()%>:<%= element.pan_date.getSeconds() %> </td>
            <td scope="row"><i class="fa fa-search-plus"></i></td>
        </tr>
      <% }) %>
   
    </tbody>

</div>