<div id="admin-blocs-produitHeader">
  <h6 class="pt-3">Clients</h6>
  <div class="produit-menu">
    <h4>Créer un nouveau client</h4>
    <div class="produit-menu-btn">
      <button type="button" class="btn btn-info">
        <i class="fa-solid fa-circle-plus"></i> Ajouter un nouveau client
      </button>
      <button type="button" class="btn btn-outline-secondary">Aide</button>
    </div>
  </div>
</div>
<div id="admin-page-add-clients" class="mt-3 rounded mb-5">
  <div class="header-add-client d-flex gap-2 p-2 pb-0">
    <i class="fa-solid fa-user mt-1"></i>
    <p>Client</p>
  </div>
  <hr />
  <form action="" class="p-2 d-flex flex-column gap-4">
    <div class="form-group d-flex gap-4">
      <div class="d-flex justify-content-end label-div">
        <label for="">Titre</label>
      </div>
      <div class="w-50">
        <div class="form-check">
          <input
            class="form-check-input"
            type="radio"
            name="flexRadioDefault"
            id="flexRadioDefault1"
          />
          <label class="form-check-label" for="flexRadioDefault1"> M </label>
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="radio"
            name="flexRadioDefault"
            id="flexRadioDefault2"
          />
          <label class="form-check-label" for="flexRadioDefault2"> Mme </label>
        </div>
      </div>
    </div>
    <div class="form-group d-flex gap-4">
      <div class="d-flex justify-content-end label-div">
        <label for="InputPrenom">Prénom</label>
      </div>
      <div class="w-50">
        <input
          type="text"
          class="form-control"
          id="InputPrenom"
          aria-describedby="prenomHelp"
        />
        <small id="prenomHelp" class="form-text text-muted"
          >Seules les lettres et le point(.),suivi d'un espace, sont
          autorisés.</small
        >
      </div>
    </div>
    <div class="form-group d-flex gap-4">
      <div class="d-flex justify-content-end label-div">
        <label for="InputNom">Nom</label>
      </div>
      <div class="w-50">
        <input
          type="text"
          class="form-control"
          id="InputNom"
          aria-describedby="nomHelp"
        />
        <small id="nomHelp" class="form-text text-muted"
          >Seules les lettres et le point(.),suivi d'un espace, sont
          autorisés.</small
        >
      </div>
    </div>
    <div class="form-group d-flex gap-4">
      <div class="d-flex justify-content-end label-div">
        <label for="InputEmail">E-mail</label>
      </div>
      <div class="w-50">
        <input type="email" class="form-control" id="InputEmail" />
      </div>
    </div>
    <div class="form-group d-flex gap-4">
      <div class="d-flex justify-content-end label-div">
        <label for="InputPassword">Mot de passe</label>
      </div>
      <div class="w-50">
        <input type="password" class="form-control" id="InputPassword" />
      </div>
    </div>
    <div class="form-group d-flex gap-4">
      <div class="d-flex justify-content-end label-div">
        <label for="InputPassword">Date de naissance</label>
      </div>
      <div class="d-flex gap-4 w-50">
        <select
          id="selectYear"
          class="form-select form-select-sm"
          aria-label=".form-select-sm"
        >
          <% for( let index = 1903; index <= 2023; index++ ) { %>
          <option value="<%= index %>" class=""><%= index %></option>

          <% } %></select
        ><select
          id="selectMonth"
          class="form-select form-select-sm"
          aria-label=".form-select-sm"
        >
          <% for( let index = 1; index <= 12; index++ ) { %>
          <option value="<%= index %>" class=""><%= index %></option>

          <% } %></select
        ><select
          id="selectDay"
          class="form-select form-select-sm"
          aria-label=".form-select-sm"
        >
          <% for( let index = 1; index <= 31; index++ ) { %>
          <option value="<%= index %>" class=""><%= index %></option>

          <% } %>
        </select>
      </div>
    </div>
    <div class="form-group d-flex gap-4">
      <div class="d-flex justify-content-end label-div">
        <label for="InputNom">Activé</label>
      </div>
      <div class="w-50">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" value="" checked />
        </div>
      </div>
    </div>
  </form>
  <hr />
  <div class="d-flex justify-content-between p-2">
    <button type="button" class="btn btn-outline-secondary">
      <a href="/admin/clients">Annuler</a>
    </button>
    <button type="button" class="btn btn-info">Enregistrer</button>
  </div>
</div>
