<%- include('../blocs/clientHeader') %>
<div class="pt-4">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">ID</th>
        <th scope="col">Titre</th>
        <th scope="col">Prénom</th>
        <th scope="col">Nom</th>
        <th scope="col">Adresse e-mail</th>
        <th scope="col">Active</th>
        <th scope="col">Offres partenaires</th>
        <th scope="col">Inscription</th>
      </tr>
    </thead>
    <tbody>
      <% if ((typeof clients !== 'undefined') && clients.length > 0) { %> <%
      clients.forEach(element => { %>
      <tr>
        <td scope="row">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="flexCheckDefault"
          />
        </td>
        <th scope="row"><%= element.cli_id %></th>
        <td><%= element.Titre.tit_libelle %></td>
        <td><%= element.cli_prenom %></td>
        <td><%= element.cli_nom %></td>
        <td><%= element.cli_mail %></td>
        <td>
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" value="" <%=
            element.cli_activation ? "checked" :"" %> />
          </div>
        </td>
        <td>
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" value="" <%=
            element.cli_partenaire ? "checked" :"" %> />
          </div>
        </td>

        <td><%= element.cli_inscription %></td>
      </tr>
      <% }) %> <% }else { %>
      <div class="alert alert-primary" role="alert">
        Il n'y a aucun client dans votre base des données pour l'instant.
      </div>
      <% } %>
    </tbody>
  </table>
  <div class="cat-pagination">
    <% if (nbrPages > 1) { %>
    <div class="row affichage">
      <p>
        Affichage <span><%= start %> - <%= end %></span> de
        <span><%= produitsNbr%></span>
      </p>
    </div>
    <nav>
      <ul class="pagination">
        <li class="page-item">
          <a class="page-link" href="/admin/clients/?&page=1">1</a>
        </li>
        <% if (pageActive === 1 || pageActive ===2) { %>
        <li class="page-item">
          <a class="page-link" href="/admin/clients/?&page=2">2</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="/admin/clients/?&page=3">3</a>
        </li>
        <% } else if (pageActive !== nbrPages && pageActive !== nbrPages-1) { %>
        <li class="page-item">
          <a class="page-link" href="/admin/clients/?&page=<%= pageActive -1 %>"
            ><%= pageActive-1 %></a
          >
        </li>
        <li class="page-item">
          <a class="page-link" href="/admin/clients/?&page=<%= pageActive %>"
            ><%= pageActive %></a
          >
        </li>
        <li class="page-item">
          <a class="page-link" href="/admin/clients/?&page=<%= pageActive+1 %>"
            ><%= pageActive+1 %></a
          >
        </li>
        <li class="page-item">
          <a class="page-link" href="/admin/clients/?&page=<%= pageActive+2 %>"
            ><%= pageActive+2 %></a
          >
        </li>
        <li class="page-item">...</li>
        <% } %>
        <li class="page-item">
          <a class="page-link" href="/admin/clients/?&page=<%= nbrPages %>"
            ><%= nbrPages %></a
          >
        </li>
      </ul>
    </nav>

    <% } %>
  </div>
</div>
