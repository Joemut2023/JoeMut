<div id="admin-blocs-produitHeader">
  <div class="produit-menu pt-3">
    <a href="/admin/tailles" style="color: rgb(36, 33, 33);" class="form-label">Voir toutes les tailles</a>
    
    <div class="produit-menu-btn">
      <a href="/admin/transporteurs/add">
        <button type="button" class="btn btn-info">
          <i class="fa-solid fa-circle-plus"></i> Ajouter une nouvelle taille
        </button>
      </a>
    </div>
  </div>
</div>
<div class="container-fluid mt-3">
  <div class="row">
    <div class="col-md-12 card shadow">
      <% if (typeof succesMsg == 'string') { %>
      <div class="alert alert-success mt-3 d-flex justify-content-between" role="alert"><%= succesMsg %> <button type="button" class="btn-close btn-close-flash" data-bs-dismiss="alert" aria-label="Close"></button></div>
      <% } %> <% if (typeof nothingMsg == 'string') { %>
      <div class="alert alert-secondary mt-3 d-flex justify-content-between" role="alert">
        <%= nothingMsg %> <button type="button" class="btn-close btn-close-flash" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %>
      <form method="post" action="/admin/tailles/update">
        <div class="row">
          <div class="mb-3 pt-3 col-6">
            <label for="transporteur-input" class="form-label"
              >Description de la taille</label
            >
            <input type="hidden" name="tai_id" value="<%= tailles.tai_id %>" />
            <input
              type="text"
              name="tai_libelle"
              class="form-control"
              id="transporteur-input"
              aria-describedby="transporteur nom"
              value="<%= tailles.tai_libelle %>"
            />
            </div>

            <div class="mb-3 pt-3 col-6">
              <label for="transporteur-input" class="form-label"
                >Ordre</label
              >
              <input
                type="number"
                class="form-control"
                id="categorie-input"
                aria-describedby="categorie nom"
                name="tai_ordre"
                value="<%= tailles.tai_ordre %>"
                required
              />
            </div>
        </div>
       
        <!-- </div>
        <button type="submit" class="btn btn-primary mb-4">Ajouter</button>
        <div class="mb-4">
          <a href="/admin/tailles" class="btn btn-secondary">Annuler</a>
        </div> -->
       

        <div style="display: flex; gap: 20px; margin-top: 20px;">
          <button class="btn btn-secondary mb-4" ><a href="/admin/tailles"  style="color: #fff; text-decoration: none;">Retour</a></button>
          <button type="submit" class="btn btn-primary mb-4">Mettre Ã  jour</button>
        </div>
      </form>
    </div>
  </div>
</div>
