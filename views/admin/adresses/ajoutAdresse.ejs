      <div class="item">
        <div class="parag">
          <p><span>*</span> Prénom</p>
        </div>
        <div class="mb-3">
          <input
            type="text"
            class="form-control req"
            name="adr_prenom"
            required
          />
          <label>Caractères intedits : 0-9!<>,;?=+{}@#"{}_$%</label>
        </div>
      </div>
      <div class="item">
        <div class="parag">
          <p><span>*</span> Nom</p>
        </div>
        <div class="mb-3">
          <input type="text" class="form-control req" name="adr_nom" required />
          <label>Caractères intedits : 0-9!<>,;?=+{}@#"{}_$%</label>
        </div>
      </div>
      <div class="item">
        <div class="parag"><p>Nom de la structure</p></div>
        <div class="mb-3">
          <input type="text" class="form-control" name="adr_structure" />
          <label>Caractères intedits : <>=()</label>
        </div>
      </div>
      <div class="item">
        <div class="parag"><p>Socièté</p></div>
        <div class="mb-3">
          <input type="text" class="form-control" name="adr_societe" />
          <label>Caractères intedits : <>=()</label>
        </div>
      </div>
      <div class="item">
        <div class="parag"><p>Numero de TVA</p></div>
        <div class="mb-3">
          <input type="text" class="form-control" name="adr_num_tva" />
        </div>
      </div>
      <div class="item">
        <div class="parag">
          <p><span>*</span> Adresse</p>
        </div>
        <div class="mb-3">
          <input
            type="text"
            class="form-control req"
            name="adr_adresse"
            required
          />
        </div>
      </div>
      <div class="item">
        <div class="parag"><p>Adresse 2</p></div>
        <div class="mb-3">
          <input type="text" class="form-control" name="adr_comp" />
        </div>
      </div>
      <div class="item">
        <div class="parag">
          <p><span>*</span> Code postal</p>
        </div>
        <div class="mb-3">
          <input
            type="number"
            class="form-control req"
            name="adr_cp"
            required
          />
        </div>
      </div>
      <div class="item">
        <div class="parag">
          <p><span>*</span> Ville</p>
        </div>
        <div class="mb-3">
          <input
            type="text"
            class="form-control req"
            name="adr_ville"
            required
          />
        </div>
      </div>
      <div class="item">
        <div class="parag">
          <p><span>*</span> Pays</p>
        </div>
        <div class="mb-3">
          <select
            class="form-select"
            aria-label="Default select example"
            name="adr_pays"
            required
          >
            <option selected>France</option>
            <option value="RDC">RDC</option>
            <option value="ANGOLA">ANGOLA</option>
            <option value="BRAZIL">BRAZIL</option>
          </select>
        </div>
      </div>
      <div class="item">
        <div class="parag">
          <p>Téléphone</p>
        </div>
        <div class="mb-3">
          <input type="number" class="form-control" name="adr_phone" />
        </div>
      </div>
