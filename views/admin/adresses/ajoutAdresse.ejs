    <p>Clients > <strong>Adresses</strong></p>
    <div class="title">
      <h3>Adresses</h3>
      <button type="button" class="btn btn-outline-secondary">Aide</button>
    </div>
  </div>
  <form action="/admin/adresse/add" method="post" class="form">
    <div class="form">
      <div class="item">
        <div class="parag">
          <p><span>*</span> E-mail du client</p>
        </div>
        <div class="mb-3">
          <input
            type="email"
            class="form-control req"
            required
            name="cli_mail"
          />
        </div>
      </div>
