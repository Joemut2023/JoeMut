    </div>

    <div class="buttons">
      <button type="button" class="btn btn-outline-secondary">Annuler</button>
      <button type="submit" class="btn btn-primary btn-envoyer">
        <a href="" data-bs-toggle="modal" data-bs-target="#sendModalLabel"
          >Enregistrer</a
        >
      </button>
    </div>

    <div
      class="modal fade sendModal"
      id="sendModalLabel"
      tabindex="-1"
      aria-labelledby="sendModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-body">
            <div class="title">
              <span><i class="fa-solid fa-circle-check"></i></span>
              <h3>Adresse ajoutée avec succes</h3>
            </div>
            <div class="button">
              <a href="/admin/adresse"
                ><button
                  data-bs-dismiss="modal"
                  aria-label="Close"
                  class="close-avis"
                >
                  OK
                </button></a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
