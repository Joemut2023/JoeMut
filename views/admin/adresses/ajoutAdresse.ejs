<%- include('../blocs/adresseHeader') %>
<div id="page-admin-ajoutAdresse">
  <div class="rounded">
    <form action="/admin/adresse/add/<%= clients.cli_id%>" method="post" class="form">
      <input type="hidden" name="cli_id" value="<%= clients.cli_id%>">
      <div class="form">
        <div class="item">
          <div class="parag">
            <p><span>*</span> E-mail du client</p>
          </div>
          <div class="mb-3">
            <input
              type="email"
              class="form-control req"
              required
              name="cli_mail"
              value="<%= clients.cli_mail %>"
              disabled
            />
          </div>
        </div>
        <div class="item">
          <div class="parag">
            <p><span>*</span> Prénom</p>
          </div>
          <div class="mb-3">
            <input
              type="text"
              class="form-control req"
              name="adr_prenom"
              value="<%= clients.cli_prenom %>"
             disabled
            />
            <label>Caractères intedits : 0-9!<>,;?=+{}@#"{}_$%</label>
          </div>
        </div>
        <div class="item">
          <div class="parag">
            <p><span>*</span> Nom</p>
          </div>
          <div class="mb-3">
            <input
              type="text"
              class="form-control req"
              name="adr_nom"
              value="<%= clients.cli_nom %>"
             disabled
            />
            <label>Caractères intedits : 0-9!<>,;?=+{}@#"{}_$%</label>
          </div>
        </div>
        <div class="item">
          <div class="parag"><p>Nom de la structure</p></div>
          <div class="mb-3">
            <input type="text" class="form-control" name="adr_structure" />
            <label>Caractères intedits : <>=()</label>
          </div>
        </div>
        <div class="item">
          <div class="parag"><p>Socièté</p></div>
          <div class="mb-3">
            <input type="text" class="form-control" name="adr_societe" />
            <label>Caractères intedits : <>=()</label>
          </div>
        </div>
        <div class="item">
          <div class="parag"><p>Numero de TVA</p></div>
          <div class="mb-3">
            <input type="text" class="form-control" name="adr_num_tva" />
          </div>
        </div>
        <div class="item">
          <div class="parag">
            <p><span>*</span> Adresse</p>
          </div>
          <div class="mb-3">
            <input
              type="text"
              class="form-control req"
              name="adr_adresse"
              required
            />
          </div>
        </div>
        <div class="item">
          <div class="parag"><p>Adresse 2</p></div>
          <div class="mb-3">
            <input type="text" class="form-control" name="adr_comp" />
          </div>
        </div>
        <div class="item">
          <div class="parag">
            <p><span>*</span> Code postal</p>
          </div>
          <div class="mb-3">
            <input
              type="number"
              class="form-control req"
              name="adr_cp"
              required
            />
          </div>
        </div>
        <div class="item">
          <div class="parag">
            <p><span>*</span> Ville</p>
          </div>
          <div class="mb-3">
            <input
              type="text"
              class="form-control req"
              name="adr_ville"
              required
            />
          </div>
        </div>
        <div class="item">
          <div class="parag">
            <p><span>*</span> Pays</p>
          </div>
          <div class="mb-3">
            <input
              type="text"
              class="form-control req"
              name="adr_pays"
              required
            />
          </div>
        </div>
        <div class="item">
          <div class="parag">
            <p>Téléphone</p>
          </div>
          <div class="mb-3">
            <input type="number" class="form-control" name="adr_phone" />
          </div>
        </div>
    
      </div>

      <div class="buttons">
        <a href="/admin/adresse">
          <button type="button" class="btn btn-outline-secondary">
            Annuler
          </button></a
        >

        <button type="submit" class="btn btn-primary btn-envoyer">
          Enregistrer
        </button>
      </div>
    </form>
  </div>
</div>
