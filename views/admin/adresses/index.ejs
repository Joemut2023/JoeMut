<div id="admin-blocs-produitHeader">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <a class="fil-ariane-item" href="#">Adresse</a>

      <li class="breadcrumb-item active" aria-current="page">
        <a href="#">Gérer les adresses</a>
      </li>
    </ol>
  </nav>
  <div class="produit-menu">
    <h1>Gérer les adresses</h1>
    <div class="produit-menu-btn">
      <button type="button" class="btn btn-info">
        <a href="/admin/adresse/add/<%= cli_id %>"
          ><i class="fa-solid fa-circle-plus"></i> Ajouter une nouvelle
          adresse</a
        >
      </button>
      <!-- <button type="button" class="btn btn-outline-secondary">Aide</button> -->
    </div>
  </div>
</div>

<div id="admin-page-adresse" class="mt-4 border rounded-top">
  <h6 class="p-3 pb-0">
    <%= adresses.length > 1 ? "Adresses" : "Adresse" %> (<%= adresses.length%>)
  </h6>
  <hr />
  <table class="p-3 table table-striped">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">ID</th>
        <th scope="col">Prénom</th>
        <th scope="col">Nom</th>
        <th scope="col">Adresse</th>
        <th scope="col">Société</th>
        <th scope="col">Structure</th>
        <th scope="col">Téléphone</th>
        <th scope="col">Code postal</th>
        <th scope="col">Ville</th>
        <th scope="col">Pays</th>
      </tr>
    </thead>
    <tbody>
      <% if ((typeof adresses !== 'undefined') && adresses.length > 0) { %> <%
      adresses.forEach(element => { %>
      <tr>
        <td scope="row">
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="flexCheckDefault"
          />
        </td>
        <th scope="row"><%= element.adr_id %></th>
        <td><%= element.adr_nom %></td>
        <td><%= element.adr_prenom %></td>
        <td><%= element.adr_adresse %></td>
        <td><%= element.adr_societe %></td>
        <td><%= element.adr_comp %></td>
        <td><%= element.adr_phone %></td>
        <td><%= element.adr_cp %></td>
        <td><%= element.adr_ville %></td>
        <td><%= element.adr_pays %></td>
        <td>
          <div class="d-flex gap-4">
            <i class="fa-solid fa-pen"></i>
            <div class="dropdown">
              <i
                class="fa-solid dropdown-toggle fa-ellipsis-vertical"
                type="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              ></i>

              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="#"
                    ><i class="fa-solid fa-eye"></i> Prévisualiser</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="#"
                    ><i class="fa-solid fa-copy"></i> Dupliquer</a
                  >
                </li>

                <li>
                  <a class="dropdown-item" href="#"
                    ><i class="fa-solid fa-trash"></i> Supprimer</a
                  >
                </li>
              </ul>
            </div>
          </div>
        </td>
      </tr>
      <% }) %> <% }else { %>
      <div class="alert alert-primary error-adresse" role="alert">
        Il n'y a aucune adresse enregistrée pour ce client dans votre base des
        données pour l'instant.
      </div>
      <% } %>
    </tbody>
  </table>
</div>
