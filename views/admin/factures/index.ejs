<div id="admin-page-facture">
  <%- include('../blocs/factureHeader') %>
  <div class="mt-4 border">
    <div class="p-2 pb-0 pt-3 d-flex gap-3">
      <i class="fa-solid fa-calendar-days"></i>
      <h6>Par date</h6>
    </div>
    <hr />
    <div class="container p-4">
      <div class="d-flex gap-5 justify-content-center">
        <p>Du</p>
        <input
          type="date"
          value="<%= new Date().toISOString().substring(0,10) %>"
        />
      </div>
      <div class="d-flex mt-2 gap-5 justify-content-center">
        <p>Au</p>
        <input
          type="date"
          value="<%= new Date().toISOString().substring(0,10) %>"
        />
      </div>
    </div>
    <hr />
    <div class="p-2 btn-generer">
      <button type="button" class="btn btn-info text-light">
        Générer un fichier pdf par date
      </button>
    </div>
  </div>
</div>
